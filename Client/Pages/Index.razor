@page "/"
@using JourneyPlanner.Shared.Models
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (deliveries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Time</th>c 
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in deliveries)
            {
                <tr>
                    <td>@item.DeliveryDate.Value.ToShortDateString() ?? 0</td>
                    <td>@item.DeliveryName</td>
                    <td>@item.DeliveryTime</td>
                    <td>@item.DeliveryAddress</td>
                    <td>
                        <a href="/updatedelivery/@item.Id" class="btn btn-warning">Edit</a>
                        <a class="btn btn-danger" onclick="deleteRecord('@item.Id')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Delivery[]? deliveries;

    protected override async Task OnInitializedAsync()
    {
        //deliveries = await Http.GetFromJsonAsync<Delivery[]>("GetDelivery");
        string url = "/api/DeliveryController/GetDelivery";
        deliveries = await Http.GetFromJsonAsync<Delivery[]>(url);
    }

}
